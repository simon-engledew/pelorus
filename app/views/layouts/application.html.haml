!!! Strict
%html{html_attrs('en-GB')}
  %head
    %title== Pelorus - #{@title || (resource && resource.respond_to?(:name) ? resource.name : 'Home')}
    != stylesheet_link_tag 'reset'
    != stylesheet_link_tag 'application'
    != javascript_include_tag :mootools
    != yield :head
  %body
    - if flash[:notice]
      #notice_container
        #notice= flash[:notice]
    #header_container
      #header
        %a{:href => root_url}
          %h1
            %span
              %img{:src => '/images/logo.gif'}
              Pelorus - The Tool For Change
        %ul
          %li
            %img{:src => '/images/icons/home.png'}
            != link_to 'Home', root_path
          %li
            %img{:src => '/images/icons/users.png'}
            != link_to 'Stakeholders', users_path
          - if user_signed_in?
            %li
              %span== #{current_user.name} (#{link_to 'Logout', destroy_user_session_path})
          - else
            %li
              %span= link_to 'Login', new_user_session_path
    #page_container
      #page
        #sidebar_container
          #sidebar
            - if resource and !controller.devise_controller?
              %h3 Navigation:
              #breadcrumbs
                %ul
                  != breadcrumbs(resource).join
            != yield :sidebar
        #content_container
          #content
            != yield
        %div{:style => 'clear:both'}
    #footer_container
      #footer
        Pelorus is designed and built by John Speed Ltd â€“ a small company based in Winchester, England.

    != javascript_include_tag 'application'
