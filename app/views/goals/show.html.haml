- content_for :sidebar do
  %fieldset#navigation
    %legend Jump To:
    %ul
      %li== <font color="#{Status::Color[goal.children_status]}">&#8226;</font> <a href="#sub_goals">Sub Goals</a>
      %li== <font color="#{Status::Color[goal.factors_status]}">&#8226;</font> <a href="#factors">Factors</a>
      %li== <font color="#{Status::Color[goal.risks_status]}">&#8226;</font> <a href="#risks">Risks</a>
      %li== <font color="#{Status::Color[goal.supported_chain_status]}">&#8226;</font> <a href="#supporting_goals">Supporting Goals</a>
      %li== <font color="#{Status::Color[goal.supported_by_status]}">&#8226;</font> <a href="#supported_goals">Supported Goals</a>
      %li== <font color="#999">&#8226;</font> <a href="#stakes">Stakes</a>

- content_for :editable do
  %p== This goal <strong>#{goal.propagate ? 'is' : 'is not'}</strong> propagating its status information.

- content_for :controls do
  .control.discuss= link_to 'discuss', polymorphic_path(resource.hierarchy, :action => :edit)

!= render :partial => '/layouts/object_header', :object => resource

#sub_goals.tab
  %h2
    %span Sub Goals:

  .container
    %table
      %thead
        %tr
          %th Name
          %th Status
      %tbody
        - goal.children.each do |goal|
          %tr
            %td
              %div== #{delete_link(goal.hierarchy)} #{link_to h(goal.name), goal.hierarchy}
            %td= status_image(goal)
        - if goal.children.empty?
          %tr
            %td.helptext{:colspan => 2}=t ".#{write_permission? ? 'write' : 'read'}.empty.subgoal"
      - if write_permission?
        %tfoot
          %tr
            %td{:colspan => 2}
              %p= new_link('new subgoal', goal.map.hierarchy << Goal, :parent_id => goal)

#factors.tab
  %h2
    %span Factors:

  .container
    %table
      %thead
        %tr
          %th Name
          %th Target
          %th Predicted
          %th Status
      %tbody
        - goal.factors.each do |factor|
          %tr
            %td
              %div== #{delete_link(factor.hierarchy)} #{link_to(h(factor.name), factor.hierarchy)}
            %td
              %nobr= factor.target
            %td
              %nobr= factor.likely
            %td= status_image(factor)
        - if goal.factors.empty?
          %tr
            %td.helptext{:colspan => 4}=t ".#{write_permission? ? 'write' : 'read'}.empty.factor"
      - if write_permission?
        %tfoot
          %tr
            %td{:colspan => 4}
              %p= new_link('new factor', goal.hierarchy << Factor)

#risks.tab
  %h2
    %span Risks:

  .container
    %table
      %thead
        %tr
          %th Name
          %th Status
      %tbody
        - goal.risks.each do |risk|
          %tr
            %td
              %div== #{delete_link(risk.hierarchy)} #{link_to(h(risk.name), risk.hierarchy)}
            %td= status_image(risk)
        - if goal.risks.empty?
          %tr
            %td.helptext{:colspan => 2}=t ".#{write_permission? ? 'write' : 'read'}.empty.risk"
      - if write_permission?
        %tfoot
          %tr
            %td{:colspan => 2}
              %p= new_link('new risk', goal.hierarchy << Risk)

#supporting_goals.tab
  %h2
    %span Supporting Goals:

  .container
    %table
      %thead
        %tr
          %th Name
          %th Status
      %tbody
        - goal.supporting_goals.each do |supporting_goal|
          - supported_by = supporting_goal.supported_by
          %tr
            %td
              %div== #{delete_link(supporting_goal.hierarchy)} #{link_to(h(supported_by.name), supported_by.hierarchy)}
            %td= status_image(supported_by)
        - if goal.supporting_goals.empty?
          %tr
            %td{:colspan => 2}=t ".#{write_permission? ? 'write' : 'read'}.empty.supporting_goal"
      - if write_permission?
        %tfoot
          %tr
            %td{:colspan => 2}
              %p= new_link('new supporting goal', goal.hierarchy << SupportingGoal)

#supported_goals.tab
  %h2
    %span Supported Goals:

  .container
    %table
      %thead
        %tr
          %th Name
          %th Status
      %tbody
        - goal.supports.each do |goal|
          %tr
            %td
              %div== #{link_to goal.name, goal.hierarchy}
            %td= status_image(goal)
        - if goal.supports.empty?
          %tr
            %td.helptext{:colspan => 2} This goal does not support any goals.

#stakes.tab
  != render :partial => '/stakes/index', :object => goal

#back_to_top{:style => 'margin-top:2em'}
  %a{:href => '#'} ^ back to top